#import <Foundation/Foundation.h>

/**
 *九宫格 核心库操作
 ***/

@interface GZSquared : NSObject
typedef void (^SuccesInput)(NSString *compontText, NSArray *candiateArray, NSArray *candiatePinyinArray);//输入 成功回传数据
typedef void (^SuccesSelect)(NSString *compontText, NSArray *candiateArray, NSArray *candiatePinyinArray);//选择候选拼音 成功回传数据
typedef void (^SuccesPredict)(NSArray *candiateArray);//联想 成功回传数据

+ (id)defaultSquared;
- (void)sendInput:(int)inputCode complation:(SuccesInput)data; //键盘输入
- (void)sendSelectedIndex:(int)index andStr:(NSString*)str selectComplation:(SuccesSelect)selectdata predicComplation:(SuccesPredict)predicdata; //点击候选按钮 有联想
- (void)selectIndex:(int)index complation:(SuccesSelect)selectdata; //选择候选 没有联想
- (void)sendSelectedPinyinIndex:(int)index andStr:(NSString*)str complation:(SuccesSelect)data; //选择某一候选拼音
- (void)predicInput:(NSString*)text complation:(SuccesPredict)data; //文字联想
- (BOOL)isSelectFinish; //选择候选index是否结束
- (NSString*)getResultStr; //候选结束，获取之前的选择 比如“好ren” //获取拼音
- (NSArray*)getCompontArr; //获取拼音候选
- (void)changeFuzzy; //修改模糊音设置
- (void)changeRecovery; //修改纠错设置
- (void)keyboardReset; // 重置
- (void)releaseWorkspace; // 释放工作空间
- (void)quitOutApp; //退出app
@end
