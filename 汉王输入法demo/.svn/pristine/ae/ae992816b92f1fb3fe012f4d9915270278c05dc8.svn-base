#import <UIKit/UIKit.h>


/**
 * 画板
 * 彩笔 展示
 ***/

@interface StrokeShowerView : UIView

- (instancetype)initWithFrame:(CGRect)frame andWrightMode:(int)mode; //mode = 1中英文单字符 2中文短句 3中文短句重叠 4自由写
- (void)changeWrightMode:(int)mode; //mode = 1中英文单字符 2中文短句 3中文短句重叠 4自由写

// 初始化
- (void)initKeyboardWorkSpace;

// 点击
- (void)strokeStartAtPoint:(CGPoint)point;

// 移动
- (void)strokeMoveToPoint:(CGPoint)point;

// 抬起
- (void)strokeEndAtPoint:(CGPoint)point;

// 清空笔迹
- (void)clearStroke;

//释放空间
- (void)releaseWorkspace;

@end
