#define ALC_SC_COMMON		0x00000001		/* Simplified Chinese:GB2312 level 1 */
#define ALC_SC_RARE			0x00000002		/* Simplified Chinese:GB2312 level 2 */
#define ALC_SC_GBK34		0x00000004   //0x00000004		/* GBK34 */
#define ALC_GBK         0x00000007      /* GBK */ 
#define ALC_SC_GB18030EX     0x00000008      /* GB18030Add */
#define ALC_GB18030          0x0000000F      /* GB18030 */

#define ALC_SC_RADICAL	0x00200000  //0x00200000		/* RADICAL，only using in simplified chinese */
