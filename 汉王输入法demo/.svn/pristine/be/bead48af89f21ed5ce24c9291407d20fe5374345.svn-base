#import <UIKit/UIKit.h>

/**
 *手写键盘view父视图
 **/

@interface GZWrightKeyboard : GZKeyboardBackgroundeView

- (instancetype)initWithFrame:(CGRect)frame withWrightMode:(int)mode andSuperView:(UIView*)superview; //mode = 1中英文单字符 2中文短句 3中文短句重叠 4自由写

/**
 * status=-1 结束 清理痕迹
 * status=0 手写取消             point不再使用
 * status=1 手写开始、移动        只传递point x,y不使用 画笔迹图
 * status=2 手写结束、超出绘图区域  传递point 且再次传递x，y 展示候选
 ***/
@property (nonatomic, copy) void(^sendWrightPoint)(NSInteger status, CGPoint point, short x, short y);
@property (nonatomic, copy) void(^sendSelectedFunc)(int type); //按钮 //1符号，2数字，3中英，4next 5删除 6逗号 7回车 8句号 9空格
@property (nonatomic, copy) void(^sendDeleteTap)(BOOL isDelete); //删除功能键 返回
- (void)removeTracesAfter; //稍后再清理痕迹
- (void)removeTraces; //立即清理痕迹
- (void)changeBackgroudColor;
- (void)stopTimer; //手动停止计时器
- (void)bringStorkeViewToFront:(BOOL)toFront; //是否将手写板置顶
/**
 *切换横竖屏时，传入的新高度
 *手写板的手写模式1中英文单字符 2中文短句 3中文短句重叠 4自由写
 ***/
- (void)changeViewFrame:(CGRect)newFrame withWrightMode:(int)mode;
@end
