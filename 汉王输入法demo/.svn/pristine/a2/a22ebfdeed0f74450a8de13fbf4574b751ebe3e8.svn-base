#import <UIKit/UIKit.h>

@interface GZCandidateMoreView : GZKeyboardCandidateView
- (instancetype)initWithFrame:(CGRect)frame andData:(NSArray*)dataArr hasPinyinCompont:(BOOL)hasCompont;
- (void)changeViewFrame:(CGRect)newFrame; //切换横竖屏时，传入的新高度
- (void)changeShowText:(NSArray*)textArr; //改变候选结果
- (void)changeShowCompont:(NSArray*)data; //改变拼音候选
- (void)closeCompontView:(BOOL)close; //关闭拼音候选区域
- (void)setCompontViewLast:(BOOL)isLastCompont; //关闭or开启拼音候选区的交互
- (BOOL)stopTimer; //停止计时器  当返回yes时表示 计时器在开启中被关闭的  no表示计时器没有开启
@property (nonatomic, copy) void(^sendSelectedStr)(NSString *text, int selectIndex); //选择的候选
@property (nonatomic, copy) void(^sendSelectedConpont)(NSString *text, int selectIndex, BOOL isLastCompont); //选择的拼音候选 isLastCompont是否是最后的候选
@property (nonatomic, copy) void(^sendSelectedFunc)(int funcType); //功能按键 //1返回   2重输  3删除
@property (nonatomic, copy) void(^sendDeleteTap)(BOOL isDelete); //删除功能键 返回
@end
